{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "visual-countdown",
  "version": "0.1.0",
  "identifier": "com.martinbetz.visual-countdown",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Visual Countdown Timer",
        "width": 480,
        "height": 480,
        "titleBarStyle": "Transparent",
        "resizable": true,
        "minWidth": 180,
        "minHeight": 180,
        "maxWidth": 700,
        "maxHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
